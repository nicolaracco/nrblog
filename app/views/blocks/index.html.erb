<% title t(:blocks) %>

<table>
  <tr>
    <th><%= t :field_type %></th>
    <th><%= t :field_title %></th>
    <th><%= t :field_content %></th>
    <th><%= t :field_order %></th>
    <th></th>
    <th></th>
  </tr>

<% @blocks.each do |block| %>
  <tr>
    <td><%= block.block_type %></td>
    <td><%= block.title %></td>
    <td><%= block.content.title %></td>
    <td><%= block.block_order %></td>
    <td><%= link_to t(:link_edit), edit_block_path(block) %></td>
    <td><%= link_to t(:link_destroy), block, :confirm => t(:confirm_sure), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:block_new), new_block_path %>
