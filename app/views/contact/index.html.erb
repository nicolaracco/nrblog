<% title t('.title') %>

<% form_tag :action => :send_mail do %>
  <p>
  <%= label :email, :name, t('.fields.name') + '*'%><br />
  <%= text_field :email, :name %>
  </p>
  <p>
  <%= label :email, :address, t('.fields.email') + '*'%><br/>
  <%= text_field :email, :address %>
  </p>
  <p>
  <%= label :email, :subject, t('.fields.subject') %><br/>
  <%= text_field :email, :subject %>
  <p/>
  <p>
  <%= label :email, :body, t('.fields.body') + '*'%><br/>
  <%= text_area :email, :body, :cols => 80, :rows => 8 %>
  </p>
  <p>
  <%= submit_tag t('.submit') %>
  </p>
<% end -%>
