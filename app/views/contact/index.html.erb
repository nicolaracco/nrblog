<% title t('.title') %>

<% form_for :contact, @contact, :send_mail do |f| %>
  <div id="contact-errors">
    <% if @contact.errors.any? %>
      <div id="errorExplanation">
        <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this content from being saved:</h2>
        <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= raw msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <p>
  <%= f.label :user_name %><br />
  <%= f.text_field :user_name %>
  </p>
  <p>
  <%= f.label :user_email %><br/>
  <%= f.text_field :user_email %>
  </p>
  <p>
  <%= f.label :subject %><br/>
  <%= f.text_field :subject %>
  <p/>
  <p>
  <%= f.label :body %><br/>
  <%= f.text_area :body, :cols => 80, :rows => 8 %>
  </p>
  <p>
  <%= f.submit t('.submit') %>
  </p>
<% end -%>
