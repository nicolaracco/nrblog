<% content_for :head do -%>
  <%= javascript_include_tag :jquery_ui %>
  <%= stylesheet_link_tag :jquery_ui %>
  <script type="text/javascript">
    $(document).ready(function() {
      $("#tabs").tabs();
    });
  </script>
<% end -%>

<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
    <ul>
    <% @category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :url_alias %><br />
    <%= f.text_field :url_alias %>
  </div>

  <div id="tabs">
    <ul>
      <li class="tab"><a href="#it"><span><%= t :language_it %></span></a></li>
      <li class="tab"><a href="#en"><span><%= t :language_en %></span></a></li>
    </ul>
    <div id="it">
      <div class="field">
        <%= f.label :label_it %><br />
        <%= f.text_field :label_it %>
      </div>
    </div>
    <div id="en">
      <div class="field">
        <%= f.label :label_en %><br />
        <%= f.text_field :label_en %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
