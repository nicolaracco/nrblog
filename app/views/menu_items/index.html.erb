<% title t(:menu_items) %>

<table>
  <tr>
    <th><%= t(:field_type) %></th>
    <th><%= t(:field_title) %></th>
    <th><%= t(:field_order) %></th>
    <th></th>
    <th></th>
  </tr>

<% @menu_items.each do |menu_item| %>
  <tr>
    <td><%= menu_item.menu_type %></td>
    <td><%= menu_item.title %></td>
    <td><%= menu_item.menu_order %></td>
    <td><%= link_to t(:link_edit), edit_menu_item_path(menu_item) %></td>
    <td><%= link_to t(:link_destroy), menu_item, :confirm => t(:confirm_sure), :method => :delete %></td>
  </tr>
<% end %>
</table>

