<% title t('.title') %>

<table>
  <tr>
    <th><%= t :title, :scope => :attributes %></th>
    <th><%= t :author, :scope => :attributes %></th>
    <th><%= Category.human %></th>
    <th><%= t :published, :scope => :attributes %></th>
    <th><%= t :in_home, :scope => :attributes %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%= content.title %></td>
    <td><%= content.author %></td>
    <td><%= content.category %></td>
    <td><%= content.published %></td>
    <td><%= content.in_home %></td>
    <td><%= link_to t(:link_show), show_content_path({:category_alias => content.category.url_alias, :url_alias => content.url_alias}) %></td>
    <td><%= link_to t(:link_edit), edit_content_path(content) %></td>
    <td><%= link_to t(:link_destroy), content, :confirm => t(:confirm_sure), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:title, :scope => [:contents, :new]), new_content_path %>
