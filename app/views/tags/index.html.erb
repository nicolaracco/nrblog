<% title t('.title') %>

<table>
  <tr>
    <th><%= t :label, :scope => :attributes %></th>
    <th><%= t :url_alias, :scope => :attributes %></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.label %></td>
    <td><%= link_to show_tag_path(:tag => tag.url_alias, :locale => nil), show_tag_path(:tag => tag.url_alias) %></td>
    <td><%= link_to t(:link_edit), edit_tag_path(tag) %></td>
    <td><%= link_to t(:link_destroy), tag, :confirm => t(:confirm_sure), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

