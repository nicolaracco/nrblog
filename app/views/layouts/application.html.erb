<!DOCTYPE html>
<html>
<head>
  <title><%= t :sitename %> | <%= yield :title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= yield :head %>
</head>
<body>
  <div id="header">
    <div id="logo-title">
      <%= link_to image_tag('/_images_/logo.png', :class => 'top'), :root %>
      <%= link_to image_tag('/_images_/logo-title.png', :alt => 'Logo'), :root %>
    </div>
    <div class="elements">
      <div id="hetop" class="top">&nbsp;
        <p id="site-slogan"><%= t :slogan %></p>
      </div>
      <div id="hebottom" class="bottom">
        <ul id="top-horiz-menu" class="links">
          <% enabled_top_horizontal_menu_items.each do |menu| -%>
            <li class="menuitem"><%= link_to menu.title, menu.url %></li>
          <% end -%>
        </ul>
      </div>
    </div>
    <div class="elements right">
      <ul id="language-selector" class="links">
        <% AVAILABLE_LOCALES.each do |lcode, lname| -%>
          <li class="language <%= lcode -%><%= ' active' if lcode == I18n.locale.to_s -%>">
            <a href="<%= localized_uri lcode -%>"><%= lname -%></a>
          </li>
        <% end -%>
      </ul>
      <p id="followme" class="bottom">
        <a class="follow" href="http://www.facebook.com/nicola.racco">
          <img alt="Facebook" src="/_images_/follow_icons/facebook.ico" />
        </a>
        <a class="follow" href="/rss.xml">
          <img alt="RSS" src="/_images_/follow_icons/feed.ico" />
        </a>
        <a class="follow" href="http://www.linkedin.com/in/nicolaracco">
          <img alt="LinkedIn" src="/_images_/follow_icons/linkedin.ico" />
        </a>
        <a class="follow" href="http://twitter.com/nicolaracco">
          <img alt="Twit me" src="/_images_/follow_icons/twitter.ico" />
        </a>
        <a class="follow" href="http://github.com/nicolaracco">
          <img alt="My Repositories" src="/_images_/follow_icons/github.png" />
        </a>
        <a class="follow" href="http://steamcommunity.com/id/nicolaracco">
          <img alt="Steam" src="/_images_/follow_icons/steam.png" />
        </a>
      </p>
    </div>
  </div>
  <div id="page">
    <div id="sidebar-left">
      <% available_left_side_blocks.each do |block| %>
        <%= render :partial => 'blocks/show', :locals => {:block => block} %>
      <% end -%>
    </div>
    <div id="content">
      <div id="content-inner">
        <% flash.each do |name, msg| -%>
          <%= content_tag :p, raw(msg), :class => name %>
        <% end -%>

        <% if show_title? -%>
          <h1><%=h yield :title %></h1>
        <% end -%>

        <%= yield %>
      </div>
    </div>
    <% if author_signed_in? %>
      <div id="sidebar-right">
        <h3 class="title"><%= current_author %></h3>
        <ul class="menu">
          <li class="menuitem"><%= link_to t(:content_new), :new_content %></li>
          <li class="menuitem">
            <%= t(:section_admin) %>
            <ul class="submenu">
              <li class="menuitem"><%= link_to t(:content_mgr), :contents %></li>
              <li class="menuitem"><%= link_to t(:category_mgr), :categories %></li>
              <li class="menuitem"><%= link_to t(:menuitem_mgr), :menu_items %></li>
              <li class="menuitem"><%= link_to t(:image_mgr), :images %></li>
              <li class="menuitem"><%= link_to t(:block_mgr), :blocks %></li>
              <li class="menuitem"><%= link_to t(:tag_mgr), :tags %></li>
            </ul>
          </li>
          <li class="menu"><%= link_to t(:logout), :destroy_author_session %></li>
        </ul>
      </div>
    <% end -%>
  </div>
  <div id="footer">
    <div id="footer-inner">
      <a href="http://creativecommons.org/licenses/by-sa/2.5/it/" rel="license">
        <img src="http://i.creativecommons.org/l/by-sa/2.5/it/80x15.png" alt="Creative Commons License" />
      </a>
    </div>
  </div>
</body>
</html>
